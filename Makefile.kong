# Makefile pour Kong API Gateway
# Facilite la gestion de Kong avec les microservices DDD

.PHONY: help kong-up kong-down kong-setup kong-test kong-logs kong-clean kong-status

# Couleurs pour les messages
GREEN = \033[32m
YELLOW = \033[33m
RED = \033[31m
NC = \033[0m # No Color

help: ## Affiche l'aide
	@echo "$(GREEN)Kong API Gateway - Commandes disponibles:$(NC)"
	@echo ""
	@grep -E '^[a-zA-Z_-]+:.*?## .*$$' $(MAKEFILE_LIST) | sort | awk 'BEGIN {FS = ":.*?## "}; {printf "$(YELLOW)%-20s$(NC) %s\n", $$1, $$2}'
	@echo ""
	@echo "$(GREEN)Utilisation typique:$(NC)"
	@echo "  1. make services-up     # D√©marrer les microservices"
	@echo "  2. make kong-up         # D√©marrer Kong"
	@echo "  3. make kong-setup      # Configurer Kong"
	@echo "  4. make kong-test       # Tester Kong"

services-up: ## D√©marre tous les microservices
	@echo "$(GREEN)üöÄ D√©marrage des microservices...$(NC)"
	cd services && docker-compose up -d
	@echo "$(GREEN)‚úÖ Microservices d√©marr√©s$(NC)"

services-down: ## Arr√™te tous les microservices
	@echo "$(YELLOW)‚èπÔ∏è  Arr√™t des microservices...$(NC)"
	cd services && docker-compose down
	@echo "$(GREEN)‚úÖ Microservices arr√™t√©s$(NC)"

kong-up: ## D√©marre Kong et ses d√©pendances
	@echo "$(GREEN)üöÄ D√©marrage de Kong...$(NC)"
	docker-compose -f docker-compose.kong.yml up -d
	@echo "$(GREEN)‚úÖ Kong d√©marr√©$(NC)"
	@echo "$(YELLOW)‚è≥ Attente que Kong soit pr√™t...$(NC)"
	@sleep 10

kong-down: ## Arr√™te Kong et ses d√©pendances
	@echo "$(YELLOW)‚èπÔ∏è  Arr√™t de Kong...$(NC)"
	docker-compose -f docker-compose.kong.yml down
	@echo "$(GREEN)‚úÖ Kong arr√™t√©$(NC)"

kong-setup: ## Configure Kong avec les services et plugins
	@echo "$(GREEN)üîß Configuration de Kong...$(NC)"
	@chmod +x kong/configure-kong.sh
	@kong/configure-kong.sh
	@echo "$(GREEN)‚úÖ Kong configur√©$(NC)"

kong-test: ## Teste la configuration Kong
	@echo "$(GREEN)üß™ Test de Kong...$(NC)"
	@chmod +x kong/test-kong.sh
	@kong/test-kong.sh

kong-logs: ## Affiche les logs de Kong
	@echo "$(GREEN)üìã Logs de Kong:$(NC)"
	docker-compose -f docker-compose.kong.yml logs kong

kong-status: ## Affiche le statut de Kong et des services
	@echo "$(GREEN)üìä Statut des conteneurs:$(NC)"
	@echo ""
	@echo "$(YELLOW)Kong:$(NC)"
	@docker-compose -f docker-compose.kong.yml ps
	@echo ""
	@echo "$(YELLOW)Microservices:$(NC)"
	@cd services && docker-compose ps
	@echo ""
	@echo "$(GREEN)üåê Endpoints disponibles:$(NC)"
	@echo "  - Kong Proxy: http://localhost:9000"
	@echo "  - Kong Admin: http://localhost:9001"
	@echo "  - Kong Manager: http://localhost:9002"
	@echo "  - Konga GUI: http://localhost:1337"

kong-clean: ## Nettoie compl√®tement Kong (supprime volumes et donn√©es)
	@echo "$(RED)üßπ Nettoyage complet de Kong...$(NC)"
	@echo "$(YELLOW)‚ö†Ô∏è  Cette action supprimera toutes les donn√©es Kong$(NC)"
	@read -p "√ätes-vous s√ªr? [y/N] " -n 1 -r; \
	if [[ $$REPLY =~ ^[Yy]$$ ]]; then \
		echo ""; \
		docker-compose -f docker-compose.kong.yml down -v; \
		docker volume prune -f; \
		echo "$(GREEN)‚úÖ Nettoyage termin√©$(NC)"; \
	else \
		echo ""; \
		echo "$(YELLOW)‚ùå Nettoyage annul√©$(NC)"; \
	fi

setup-all: ## Configuration compl√®te (services + Kong)
	@echo "$(GREEN)üöÄ Configuration compl√®te du syst√®me...$(NC)"
	@make services-up
	@sleep 10
	@make kong-up
	@sleep 10
	@make kong-setup
	@echo "$(GREEN)‚úÖ Configuration compl√®te termin√©e!$(NC)"
	@echo ""
	@echo "$(GREEN)üåê Votre API Gateway est pr√™t:$(NC)"
	@echo "  - Endpoint principal: http://localhost:9000"
	@echo "  - Interface Kong: http://localhost:9002"
	@echo "  - Interface Konga: http://localhost:1337"

logs-follow: ## Suit les logs de Kong en temps r√©el
	@echo "$(GREEN)üìã Suivi des logs Kong (Ctrl+C pour arr√™ter):$(NC)"
	docker-compose -f docker-compose.kong.yml logs -f kong

restart-all: ## Red√©marre tout le syst√®me
	@echo "$(YELLOW)üîÑ Red√©marrage du syst√®me...$(NC)"
	@make services-down
	@make kong-down
	@sleep 5
	@make setup-all

# Commandes avanc√©es pour le debugging
kong-admin: ## Ouvre l'API Admin Kong dans le navigateur
	@echo "$(GREEN)üåê Ouverture de l'API Admin Kong...$(NC)"
	@open http://localhost:9001 || xdg-open http://localhost:9001 || echo "Ouvrez http://localhost:9001 dans votre navigateur"

kong-gui: ## Ouvre l'interface Kong Manager
	@echo "$(GREEN)üåê Ouverture de Kong Manager...$(NC)"
	@open http://localhost:9002 || xdg-open http://localhost:9002 || echo "Ouvrez http://localhost:9002 dans votre navigateur"

konga-gui: ## Ouvre l'interface Konga
	@echo "$(GREEN)üåê Ouverture de Konga...$(NC)"
	@open http://localhost:1337 || xdg-open http://localhost:1337 || echo "Ouvrez http://localhost:1337 dans votre navigateur"

# Configuration par d√©faut
.DEFAULT_GOAL := help 